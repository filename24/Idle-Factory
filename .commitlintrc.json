{
  "$schema": "https://json.schemastore.org/commitlintrc",
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test",
        "types"
      ]
    ],
    "scope-case": [0]
  }
}
