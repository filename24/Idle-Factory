generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DatabaseURL")
}

model User {
  id       String    @id @map("_id")
  nickname String?
  lang     String    @default("ko")
  factory  Factory[]
}

model Guild {
  id        String @id @map("_id")
  name      String
  lang      String @default("ko")
  tax       Float  @default(0)
  globalExp Float  @default(0)
  flags     Float  @default(0)
}

model Factory {
  id      String   @id @map("_id")
  ownerId String
  owners  String[] @default([])
  exp     Float    @default(0)
  flag    Float    @default(0)
  workers Worker[]
  items   Item[]
  owner   User     @relation(fields: [ownerId], references: [id])
}

model Item {
  id        String  @id @map("_id")
  factoryId String
  name      String
  count     Float   @default(0)
  price     Float   @default(0)
  flag      Float   @default(0)
  factory   Factory @relation(fields: [factoryId], references: [id])
}

type Worker {
  job          String
  name         String
  exp          Float       @default(0)
  attributes   Attributes?
}

type Attributes {
  athletics    Float @default(0) // 달리기
  strength     Float @default(0) // 힘
  machinery    Float @default(0) // 작동
  construction Float @default(0) // 건설
}

model Notice {
  id          String   @id @default(uuid()) @map("_id")
  title       String
  description String
  postedAt    DateTime @default(now())
  updatedAt   DateTime @default(now())
}
